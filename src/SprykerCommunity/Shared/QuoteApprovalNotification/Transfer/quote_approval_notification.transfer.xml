<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">
    <transfer name="QuoteApprovalNotification" strict="true">
        <property name="requestedApprover" type="CompanyUser"/>
        <property name="buyer" type="Customer"/>
        <property name="quote" type="Quote"/>
        <property name="link" type="string"/>
        <property name="quoteApproval" type="QuoteApproval"/>
    </transfer>
    <transfer name="QuoteApprovalEvent" strict="true">
        <property name="idQuoteApproval" type="int"/>
        <property name="idCompanyUser" type="int"/>
        <property name="idQuote" type="int"/>
        <property name="eventName" type="string"/>
    </transfer>

    <transfer name="Mail">
        <property name="type" type="string"/>
        <property name="recipients" type="MailRecipient[]" singular="recipient"/>
        <property name="quoteApprovalNotification" type="QuoteApprovalNotification"/>
        <property name="templates" type="MailTemplate[]" singular="template"/>
    </transfer>
    <transfer name="MailRecipient">
        <property name="name" type="string"/>
        <property name="email" type="string"/>
    </transfer>

    <transfer name="MailTemplate">
        <property name="name" type="string"/>
        <property name="isHtml" type="bool"/>
    </transfer>

    <transfer name="EventEntity">
        <property name="event" type="string"/>
        <property name="id" type="int"/>
        <property name="foreignKeys" type="array" singular="foreignKeys"/>
    </transfer>

    <transfer name="QuoteApproval">
        <property name="status" type="string"/>
    </transfer>

    <transfer name="QuoteApprovalRequest">
        <property name="idQuoteApproval" type="int"/>
    </transfer>

    <transfer name="CompanyUser">
        <property name="idCompanyUser" type="int"/>
        <property name="customer" type="Customer"/>
    </transfer>

    <transfer name="Customer">
        <property name="idCustomer" type="int"/>
        <property name="email" type="string"/>
        <property name="firstName" type="string"/>
        <property name="lastName" type="string"/>
    </transfer>

    <transfer name="Quote">
        <property name="customerReference" type="string"/>
    </transfer>
</transfers>
